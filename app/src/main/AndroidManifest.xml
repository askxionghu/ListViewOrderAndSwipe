<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.android.listviewdragginganimation"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="New App">
        </activity>
        <activity
            android:name=".ListViewDraggingAnimation"
            android:label="Original App">
        </activity>
        <activity
            android:name=".SelectApp"
            android:label="@string/title_activity_select_app">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
